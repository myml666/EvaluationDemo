<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:id="@+id/item_regularevaluation_img_orderimg"
                android:src="@mipmap/ic_launcher"
                android:layout_height="40dp" />
            <com.itfitness.evaluationdemo.widget.EvaluationView
                android:layout_width="match_parent"
                android:id="@+id/item_regularevaluation_evaluatinview"
                android:layout_height="wrap_content">

            </com.itfitness.evaluationdemo.widget.EvaluationView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/itemLine"
            android:layout_height="1dp"/>
        <EditText
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:background="@null"
            android:lines="4"
            android:id="@+id/item_regularevaluation_et_content"
            android:maxLines="5"
            android:gravity="start"
            android:hint="宝贝满足你的期待吗？说说你的使用心得，分享给想买的他们吧"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <com.itfitness.evaluationdemo.widget.EvaluationChoiceImageView
            android:layout_width="match_parent"
            android:id="@+id/item_regularevaluation_evaluationchoiceimageview"
            android:layout_height="wrap_content">

        </com.itfitness.evaluationdemo.widget.EvaluationChoiceImageView>
    </LinearLayout>
</android.support.v7.widget.CardView>